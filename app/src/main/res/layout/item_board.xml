<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="210dp"
    android:layout_width="match_parent"
    android:elevation="8dp"
    android:layout_margin="@dimen/grid_0.5"
    >
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"
        >

        <ImageView
            android:id="@+id/image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/title"
            android:textSize="19dp"
            android:layout_marginTop="@dimen/grid_0.5"
            android:layout_marginLeft="@dimen/grid_1"
            android:layout_marginRight="@dimen/grid_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Pamatky"
            />

        <TextView
            android:id="@+id/description"
            android:layout_marginBottom="@dimen/grid_0.5"
            android:layout_marginLeft="@dimen/grid_1"
            android:layout_marginRight="@dimen/grid_1"
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nejake povidani o pamatkach"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>